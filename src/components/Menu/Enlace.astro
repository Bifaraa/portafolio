---
interface Props {
  contenido: string;
  enlace: string;
}

const { contenido, enlace } = Astro.props;
---

<div>
  <a href={ enlace }>
    { contenido }
  </a>
</div>

<style>
  div {
    border: 1px solid var(--border-boton);
    border-radius: 10px;
    padding: .7em 2em;
    position: relative;
    overflow: hidden;
  }

  div::before{
    position: absolute;
    bottom: 0px;
    left: 0px;
    content: '';
    width: 100%;
    height: 0%;
    z-index: -1;
    
  }

  div:hover::before{
    background-image: linear-gradient(to left, #ED6C09, #7D3611);
    animation: pintar .5s ease-in-out 0s;
    height: 100%;
  }

  div:not(:hover)::before {
    animation: despintar .5s ease-in-out 0s;
    background-image: linear-gradient(to left, #ED6C09, #7D3611);
  }

  div:hover {
    cursor: pointer;
  }

  div > a{
    color: var(--text);
    text-decoration: none;
    font-size: .7em;
   }

   @keyframes pintar {
    from {
      height: 0%;
    }
    to {
      height: 100%;
    }
   }
   @keyframes despintar {
    from {
      height: 100%;
    }
    to {
      height: 0%;
    }
   }
</style>